<Page x:Class="bakery.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bakery"
      mc:Ignorable="d" 
      Height="Auto" Width="Auto"
      MaxHeight="1080" MaxWidth="1920"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Menu">

    <Grid>
        <TabControl>
            <TabItem Header="Пользователи">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="0.1*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="0.2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <DataGrid Grid.Column="1" AutoGenerateColumns="False" MinColumnWidth="50" ColumnWidth="*" Name="usersDataGrid" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID"
                                                Binding="{Binding Path=Id}"/>
                            <DataGridTextColumn Header="ФИО"
                                                Binding="{Binding Path=FullName}"/>
                            <DataGridTextColumn Header="Логин"
                                                Binding="{Binding Path=Login}"/>
                            <DataGridTextColumn Header="Пароль"
                                                Binding="{Binding Path=Password}"/>
                            <DataGridTextColumn Header="Роль"
                                                Binding="{Binding Path=RoleEntity.Title}"/>
                        </DataGrid.Columns>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Редактировать" Click="EditUserButton_Click"></MenuItem>
                                <MenuItem Header="Удалить" Click="RemoveUserButton_Click"></MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                        <Button
                            MinWidth="50"
                            MaxWidth="200"
                            MinHeight="30"
                            MaxHeight="80"
                            Margin="5"
                            FontSize="14"
                            Click="AddUserButton_Click">Добавить запись</Button>
                        <Button
                            MinWidth="50"
                            MaxWidth="200"
                            MinHeight="30"
                            MaxHeight="80"
                            Margin="5"
                            FontSize="14"
                            Click="RemoveUserButton_Click">Удалить запись</Button>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Роли пользователей">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="0.1*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="0.2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <DataGrid Grid.Column="1" AutoGenerateColumns="False" MinColumnWidth="50" ColumnWidth="*" Name="rolesDataGrid" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID"
                                                Binding="{Binding Path=Id}"/>
                            <DataGridTextColumn Header="Название"
                                                Binding="{Binding Path=Title}"/>
                        </DataGrid.Columns>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Редактировать"></MenuItem>
                                <MenuItem Header="Удалить"></MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                        <Button
                            MinWidth="50"
                            MaxWidth="200"
                            MinHeight="30"
                            MaxHeight="80"
                            Margin="5"
                            FontSize="14"
                            Click="AddRoleButton_Click">Добавить запись</Button>
                        <Button
                            MinWidth="50"
                            MaxWidth="200"
                            MinHeight="30"
                            MaxHeight="80"
                            Margin="5"
                            FontSize="14"
                            Click="RemoveRoleButton_Click">Удалить запись</Button>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Заказчики"></TabItem>
            
            <TabItem Header="Заказы"></TabItem>
            
            <TabItem Header="Поставщики"></TabItem>
            
            <TabItem Header="Поставки"></TabItem>
            
            <TabItem Header="Продукция"></TabItem>
            
            <TabItem Header="Сырье"></TabItem>
        </TabControl>
    </Grid>
</Page>
