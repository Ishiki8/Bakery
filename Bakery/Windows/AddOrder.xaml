<Window x:Class="bakery.Windows.AddOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bakery.Windows"
        mc:Ignorable="d"
        Title="Добавить заказ" Height="600" Width="500"
        ResizeMode="NoResize"
        FontSize="14"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.15*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <TextBlock HorizontalAlignment="Center" Margin="0 20" FontSize="20" Grid.RowSpan="2">Добавление заказа</TextBlock>

            <Grid Margin="10">
                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="Дата"></TextBlock>
                    <TextBox x:Name="dateView" Margin="0 5 0 0" Height="25" Width="100"
                             Style="{StaticResource placeHolder}" Tag="Введите дату"
                             ToolTip="Допустимы форматы дд.мм.гггг, дд/мм/гггг. Дата заказа не может превышать текущую"></TextBox>
                    <TextBlock x:Name="wrongDate" Foreground="Red" Width="100" FontSize="10" TextWrapping="WrapWithOverflow"></TextBlock>
                </StackPanel>
                
                <StackPanel HorizontalAlignment="Center" Margin="0 0 140 0"> 
                    <TextBlock Text="Статус"></TextBlock>
                    <ComboBox Name="statusView" Margin="0 5 0 0" SelectedIndex="0" Width="110">
                        <TextBlock>Не оплачен</TextBlock>
                        <TextBlock>В работе</TextBlock>
                        <TextBlock>Готов</TextBlock>
                        <TextBlock>Доставлен</TextBlock>
                    </ComboBox>
                </StackPanel>

                <StackPanel HorizontalAlignment="Right">
                    <TextBlock Text="Заказчик"></TextBlock>
                    <ComboBox Name="customerView" Margin="0 5 0 0" SelectedValuePath="Id" Width="240">
                        <ComboBox.ItemTemplate>
                            <DataTemplate >
                                <TextBlock Text="{Binding Path=Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock x:Name="wrongCustomer" Foreground="Red" Width="240" FontSize="10" TextWrapping="WrapWithOverflow"></TextBlock>
                </StackPanel>
            </Grid>

            <TextBlock Text="Состав" Margin="10 0 0 0" VerticalAlignment="Bottom"></TextBlock>

            <DataGrid Margin="10 5 10 10" AutoGenerateColumns="False" ColumnWidth="*" Name="productsDataGrid" IsReadOnly="True" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название"
                                        Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Количество" MaxWidth="100"
                                        Binding="{Binding Quantity}"/>
                    <DataGridTemplateColumn Width="30" CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Height="20" Width="20" Margin="2 1 1 1" Click="RemoveProductButton_Click" FontSize="12">[X]</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Удалить" Click="RemoveProductButton_Click"></MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </StackPanel>
        <Grid Grid.Row="1">
            <Button Margin="10 0 0 0" Height="30" Width="auto" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Click="AddProductButton_Click">Добавить продукцию</Button>
            <Button Margin="0 0 10 0" Height="30" Width="auto" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Click="AddButton_Click">Добавить заказ</Button>
        </Grid>
    </Grid>
</Window>
